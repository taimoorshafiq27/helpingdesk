<div class="flex py-6 px-24 bg-sky-600">
    <h1 class="pt-1 text-lg text-white"><%= @title %></h1>
    <div class="flex items-center ml-auto space-x-2 pr-10">
        <i class="fa-solid fa-user"></i>
        <%= link_to "My account", user_path(helpers.current_user), class: "text-white" %>
    </div>
    <% if helpers.current_user %>
        <%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete }, class: "px-2 py-1 rounded bg-red-500 text-white hover:bg-red-600" %>
    <% end %>
</div>
<div class="flex min-h-screen">
  <%= render MenuComponent.new %>
  <div class="w-full bg-gray-100">
    <%= render ToolbarComponent.new(title: "Admin") %>
    <div class="flex justify-end py-6 px-24">
        <%= link_to "Add Role", new_role_path, class: "px-2 py-1 rounded bg-sky-500 text-white hover:bg-sky-600" %>
    </div>
    <div>
        <% @roles.each do |role| %>
            <%= link_to "#{role.name}", role_path(role), class: "text-blue-400 hover:text-blue-500 cursor-pointer" %>
            <%= role.code %>
        <% end %>
    </div>
  </div>
</div>

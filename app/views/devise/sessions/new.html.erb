
<div class="min-h-screen flex">
  <div class="flex-1 px-8 flex items-center justify-center">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="pb-8">
        <h2 class="pb-1 text-4xl">Sign in</h2>
        <span class="font-light text-sm">If you don't have an account, please 
          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "Sign up", new_registration_path(resource_name), class: "text-sky-500 hover:text-sky-600" %><br />
          <% end %>
        </span>
      </div>

      <div class="flex flex-col pb-6">
        <%= f.label :email, class: "pb-1" %>
        <%= f.email_field :email, class: "py-1 rounded border-solid border-gray-300 border-1" %>
      </div>

      <div class="flex flex-col pb-6">
        <%= f.label :password, class: "pb-1" %>
        <%= f.password_field :password, class: "py-1 rounded border-solid border-gray-300 border-1" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="pb-1">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="pb-3">
        <%= f.submit "Log in", class: "w-full px-5 py-3 rounded bg-sky-500 text-white hover:bg-sky-600 hover:cursor-pointer" %>
      </div>

      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "font-light text-sm" %><br />
      <% end %>
    <% end %>
  </div>
  <div class="flex-1 bg-gradient-to-b from-sky-400 to-sky-700">
    <h1 class="pt-32 text-center text-5xl">HelpingDesk</h1>
    <h2 class="pt-4 text-center">Provide excellent support to your clients with a simple and lightweight IT ticketing system!</h2>
  </div>
</div>
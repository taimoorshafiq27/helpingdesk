<div class="min-h-screen flex">
  <div class="flex-1 px-8 flex items-center justify-center">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="pb-8">
        <h2 class="pb-1 text-4xl">Forgot your password?</h2>
        <span class="font-light text-sm">If you would like to sign up, please 
          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "Sign up", new_registration_path(resource_name), class: "text-sky-500 hover:text-sky-600" %><br />
          <% end %>        
        </span>
        <span class="font-light text-sm">If you already have an account, please 
          <%- if controller_name != 'sessions' %>
            <%= link_to "Log in", new_session_path(resource_name), class: "text-sky-500 hover:text-sky-600" %><br />
          <% end %>
        </span>
      </div>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="flex flex-col pb-6">
        <%= f.label :email, class: "pb-1" %>
        <%= f.email_field :email, class: "py-1 rounded border-solid border-gray-300 border-1" %>
      </div>
      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: "w-full px-5 py-3 rounded bg-sky-500 text-white hover:bg-sky-600 hover:cursor-pointer" %>
      </div>
    <% end %>
  </div>
  <div class="flex-1 bg-gradient-to-b from-sky-400 to-sky-700">
    <h1 class="pt-32 text-center text-5xl">HelpingDesk</h1>
    <h2 class="pt-4 text-center">Provide excellent support to your clients with a simple and lightweight IT ticketing system!</h2>
  </div>
  <%#= render "devise/shared/links" %>
</div>
<div class="w-3/5 m-auto px-6 rounded bg-white">
    <div class="py-6 px-8 rounded bg-white">
        <%= form_with model: @user do |form| %>
            <div class="flex flex-col pb-6">
                <%= form.label :role_id, class: "pb-1" %>
                <%= form.collection_select :role_id, Role.all, :id, :name,{ prompt: "Select a role" }, class: "py-1 rounded border border-gray-300 border focus:outline-sky-600" %>
            </div>
            <%= form.submit "Update user", class: "px-2 py-1 rounded bg-sky-500 text-white hover:bg-sky-600" %>
        <% end %>
    </div>
</div>
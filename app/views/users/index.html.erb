<div class="flex min-h-screen">
  <%= render MenuComponent.new %>
  <div class="w-full bg-gray-100">
    <%= render ToolbarComponent.new(title: "Users") %>
    <div class="rounded bg-white">
      <div class="py-6 px-24">
          <% @users.each do |user| %>
            <div>
              <%= user.first_name %>
              <%= link_to "Edit user", edit_user_path(user), class: "ml-8 py-2 px-3 text-sm rounded bg-gray-100 hover:bg-gray-200" %>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>
<div class="flex min-h-screen bg-gray-200">
    <%= render MenuComponent.new %>
    <div class="w-full">
        <div class="flex py-6 px-24 bg-white">
            <h1 class="flex-1">Tickets</h1>
            <div class="flex items-center ml-auto space-x-2 pr-10">
                <i class="fa-solid fa-user"></i>
                <%= link_to "My account", user_path(current_user) %>
            </div>
            <% if current_user %>
              <%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete }, class: "px-2 py-1 rounded bg-red-500 text-white hover:bg-red-600" %>
            <% end %>
        </div>
        <div class="flex justify-end py-6 px-24">
          <%= link_to "New ticket", new_ticket_path, class: "px-2 py-1 rounded bg-sky-500 text-white hover:bg-sky-600" %>
        </div>
        <div class="px-24 py-6">
          <%= render partial: "tickets" %>
        </div>
    </div>
</div>

<div class="flex flex-col space-y-4">
  <% @tickets.each do |ticket| %>
    <div class="bg-white rounded p-4 border border-gray-200">
      <%= link_to "#{ticket.title.humanize}", ticket_path(ticket), class: "text-lg font-semibold" %>
      <div class="flex text-sm text-gray-600 mt-2">
        <h2 class="pr-1 font-medium">Client:</h2>
        <span><%= ticket.client.first_name %></span>
      </div>
    </div>
  <% end %>
</div>

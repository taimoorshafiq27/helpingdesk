<div class="py-6 px-8 rounded bg-white">
<%= form_with model: @role do |form| %>
    <%= form.hidden_field :client_id %>
    <div class="flex flex-col pb-6">
        <%= form.label :name, class: "pb-1" %>
        <%= form.text_field :name, class: "py-1 rounded border-solid border-gray-300 border focus:outline-sky-600" %>
    </div>
    <div class="flex flex-col pb-6">
        <%= form.label :code, class: "pb-1" %>
        <%= form.text_field :code, class: "py-1 rounded border-solid border-gray-300 border focus:outline-sky-600" %>
    </div>
    <div>
        <%= form.submit class: "px-2 py-1 rounded bg-sky-500 text-white hover:bg-sky-600" %>
    </div>
<% end %>
</div>